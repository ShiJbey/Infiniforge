{
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext"],
    "target": "ES2018",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "removeComments": false,
    "module": "ESNext",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
