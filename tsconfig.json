{
  "compilerOptions": {
    "target": "es6",
    "resolveJsonModule": true,
    "strict":true,
    "lib": ["dom", "es6"],
    "outDir": "./build",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "src/**/*/"
  ],
  "compileOnSave": true
}