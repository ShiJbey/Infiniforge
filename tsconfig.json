{
	"compilerOptions": {
        "strict": true,
		"target": "es6",
        "moduleResolution": "node",
        "outDir": "build",
        "module": "CommonJS",
        "rootDir": "src",
        "resolveJsonModule": true,
        "allowJs": true,
        "declaration": true,
        "sourceMap": true,
        "removeComments": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.d.ts",
        "src/**/*.json"
    ],
}
